<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.activity.SelectPlayersActivity">

    <TextView
        android:id="@+id/selectPlayersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:clickable="false"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/backgroundTextColor"
        android:text="@string/labelPlayerChoice"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/turnNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/SelectPlayersContinueButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectPlayersTitle">

        <View
            android:id="@+id/invisiblePlayerChoiceAdjusterLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:visibility="invisible"/>


        <LinearLayout
            android:id="@+id/linearLayoutParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="3"
            app:layout_constraintBottom_toTopOf="@+id/SelectPlayersContinueButton"
            app:layout_constraintTop_toBottomOf="@+id/selectPlayersTitle">

            <EditText
                android:id="@+id/Player1Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/addPlayer_hint"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="12"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/Player2Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/addPlayer_hint"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="12"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/Player3Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/addPlayer_hint"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="12"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/Player4Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/addPlayer_hint"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="12"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/Player5Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/addPlayer_hint"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="12"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/Player6Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/addPlayer_hint"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="12"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/Player7Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/addPlayer_hint"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="12"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/Player8Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/addPlayer_hint"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="12"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/Player9Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/addPlayer_hint"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="12"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/Player10Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/addPlayer_hint"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="12"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <View
            android:id="@+id/invisiblePlayerChoiceAdjusterRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:visibility="invisible"/>

    </LinearLayout>

    <Button
        android:id="@+id/SelectPlayersContinueButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundButtonColor"
        android:onClick="continueToNumberPoints"
        android:text="@string/btnContinue"
        android:textColor="@color/textButtonColor"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
